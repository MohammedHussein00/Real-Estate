<script>
    class HomeComponent {
  constructor() {
    this.imageElement = null;
    this.titleElement = null;
    this.descriptionElement = null;

    // Bind event listeners
    document.addEventListener('DOMContentLoaded', () => this.ngOnInit());
    window.addEventListener('load', () => this.ngAfterViewInit());
    document.addEventListener('mousemove', (event) => this.onMouseMove(event));
  }

  ngOnInit() {
    this.imageElement = document.getElementById('floatingImage');
  }

  ngAfterViewInit() {
    this.imageElement = document.getElementById('floatingImage');
    this.setupScrollAnimation();
    this.animateImage();
  }

  animateImage() {
    if (this.imageElement) {
      // Add the class to start the animation
      this.imageElement.classList.add('image-visible');
    }
  }

  setupScrollAnimation() {
    const elementsToAnimate = document.querySelectorAll(
      '.hidden-title, .hidden-description'
    );
    const cards = document.querySelectorAll('.card-offer');

    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('animate');
        }
      });
    }, {
      threshold: 0.1
    });

    cards.forEach(card => observer.observe(card));
    elementsToAnimate.forEach(el => observer.observe(el));
  }

  onMouseMove(event) {
    const mouseX = event.clientX;
    const mouseY = event.clientY;
    const windowWidth = window.innerWidth;
    const windowHeight = window.innerHeight;

    const imageX = (windowWidth / 2 - mouseX) / 10;
    const imageY = (windowHeight / 2 - mouseY) / 10;


    if (this.imageElement) {
      this.imageElement.style.transform = `translate(${imageX}px, ${imageY}px)`;
    }
  }
}

// Instantiate the component
const homeComponent = new HomeComponent();

</script>

